{
    "manifest_version": 2,
    "name": "Hacker News Compact and Clear",
    "version": "1.0.0",

    "description": "Whiter background, narrower, declutered.",
    "homepage_url": "https://github.com/icetbr/webext-hacker-news-compact-and-clear",
    "author": "icetbr",

    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "96": "icons/96.png",
        "128": "icons/128.png"
    },

    "browser_specific_settings": {
        "gecko": {
          "id": "hacker-news-compact-and-clear@icetbr"
        },
        "keywords": ["userstyle", "hackernews", "minimalist"]
    },

    "content_scripts": [
        {
            "matches": ["https://news.ycombinator.com/*"],
            "js": ["content.js"]
        }
    ]
}
